<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Je IKEA narvaná?</title>
    <link href="https://db.onlinewebfonts.com/c/eb170287d0e44284a3292879844309b2?family=IKEA+Sans" rel="stylesheet" type="text/css"/>
    <link href="/style.css" rel="stylesheet" type="text/css"/>
  </head>
  <body>
    
    <div class="fill-left-corner"> </div>
    <div class="diagonal-box flex">
      <div class="ikea-bg"> </div>
      <div class="text-4xl md:text-6xl self-center content pl-12 text-blue">JE IKEA V BRNĚ<br>NARVANÁ?</div>
    </div>

    <div class="flex justify-center mb-24">
      <div class="text-center">
          <div class="text-8xl">{{ isFullDescription }}</div>
          {{ currentStateDescription }}
      </div>
    </div>

    <div class="flex justify-center mt-5">
      <div class="transform hover:scale-105 transition duration-300 shadow-xl rounded-lg intro-y bg-white text-blue min-w-75 lg:min-w-50">
          <div class="p-12">
              <div class="flex justify-center">
                  <div class="grid grid-cols-9 w-full gap-x-1">
                      <% let progressColors = ['green', 'green', 'green', 'yellow', 'yellow', 'yellow', 'red', 'red', 'red'] %>
                      <% for(var i = 0; i < progressColors.length; i++){ %>
                          <div class="<%= i < coloredPieces ? 'bg-'+progressColors[i]+'-500 animate-pulse' : 'bg-gray-100' %> rounded-lg h-2.5 w-full"> </div>
                      <% } %>
                  </div>
              </div>
              <div class="ml-2 w-full flex-1 text-center">
                  <div class="mt-12">
                      <div class="mt-3 text-3xl font-bold leading-8">
                        aktuálně {{current}} <small>lidí </small>
                      </div>
                      <span class="text-gray">{{maxCapacity-current}} lidí se ještě vejde</span>
                  </div>
              </div>
          </div>
      </div>
    </div>

    <div class="flex justify-center mt-36 mb-12">
        <div class="text-center text-3xl">
            Za posledních 5 hodin...
        </div>
    </div>

    <div class="flex justify-center mt-5">
        <div class="transform min-w-75 lg:min-w-50">
            <div class="p-12">
                <div class="grid grid-cols-{{capacityHistory.length}} w-full gap-x-4 items-end">
                    <% for(var i = capacityHistory.length-1; i >= 0; i--){ %>
                        <div class="text-center text-yellow-400 h-6">ø {{capacityHistory[i].avg}}</div>
                    <% } %>
                </div>
                <div class="flex justify-center items-end">
                    <div class="grid grid-cols-{{capacityHistory.length}} w-full gap-x-4 h-80 items-end">
                        <% for(var i = capacityHistory.length-1; i >= 0; i--){ %>
                            <div class="bg-red-500 rounded-lg w-full" style="height: <%= (capacityHistory[i].avg/maxCapacity)*100 %>%"> </div>
                        <% } %>
                    </div>
                </div>
                <div class="flex justify-center">
                    <div class="grid grid-cols-{{capacityHistory.length}} w-full text-center">
                        <% for(i = capacityHistory.length-1; i >= 0; i--){ %>
                            <div class="p-4 text-xl">{{capacityHistory[i].date.match(/(_)([0-9]+)/)[2]}}h</div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

  <div class="text-center p-12">© Honza Raclavský 2021</div>

  </body>
</html>
